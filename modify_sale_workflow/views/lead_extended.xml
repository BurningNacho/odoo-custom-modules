<odoo>

	<!-- EDIT VIEW FOR COLLABORATORS -->
	<record id="lead_extension_collaborator" model="ir.ui.view">
	    <field name="name">crm.lead.lead_extension_collaborator</field>
	    <field name="model">crm.lead</field>
	    <field name="inherit_id" ref="crm.crm_lead_view_form"/>
	    <field name="arch" type="xml">

			<xpath expr="//button[@name='action_set_won_rainbowman']" position="attributes">
					<attribute name="invisible">1</attribute>
			</xpath>
			<xpath expr="//button[@name='163']" position="attributes">
					<attribute name="invisible">1</attribute>
			</xpath>
			<xpath expr="//button[@name='164']" position="attributes">
					<attribute name="invisible">1</attribute>
			</xpath>
			<xpath expr="//field[@name='stage_id']" position="attributes">
					<attribute name="invisible">1</attribute>
			</xpath>
			<xpath expr="//button[@name='action_schedule_meeting']" position="attributes">
					<attribute name="invisible">1</attribute>
			</xpath>
			<xpath expr="//label[@for='name'][2]" position="attributes">
					<attribute name="string">Comercial</attribute>
			</xpath>
			<xpath expr="//h2" position="attributes">
					<attribute name="invisible">1</attribute>
			</xpath>
			<xpath expr="//group[@name='lead_partner']" position="attributes">
					<attribute name="invisible">1</attribute>
			</xpath>
			<xpath expr="//group[@name='opportunity_partner']" position="attributes">
					<attribute name="invisible">1</attribute>
			</xpath>
			<xpath expr="//field[@name='date_deadline']" position="attributes">
					<attribute name="invisible">1</attribute>
			</xpath>
			<xpath expr="//field[@name='priority']" position="attributes">
					<attribute name="invisible">1</attribute>
			</xpath>
			<xpath expr="//field[@name='tag_ids']" position="attributes">
					<attribute name="invisible">1</attribute>
			</xpath>
			<xpath expr="//field[@name='user_id']" position="attributes">
					<attribute name="invisible">1</attribute>
			</xpath>
			<xpath expr="//field[@name='team_id']" position="attributes">
					<attribute name="invisible">1</attribute>
			</xpath>
			<xpath expr="//page[@name='lead']" position="attributes">
					<attribute name="invisible">1</attribute>
			</xpath>



			<xpath expr="//group" position="inside">
				<group colspan="2">
					<field name="x_operator_tramit" invisible="1"/>
				</group>

				<group colspan="2">
					<field name="x_charge_code" />
					<field name="x_contract_type" required="1" widget="button"/>
				</group>



				<group colspan="2">
					<field name="x_cif" attrs="{'required': [('x_contract_type', '=', 'empresa')], 'invisible':  [('x_contract_type', '!=', 'empresa')]}" />
					<field name="x_company_name" attrs="{'required': [('x_contract_type', '=', 'empresa')], 'invisible':  [('x_contract_type', '!=', 'empresa')]}" />
					<field name="x_nss" attrs="{'invisible':  [('x_contract_type', '!=', 'autonomo')]}" />
					<field name="x_contract_file" />
				</group>


				<group colspan="2">
					<field name="x_nif" attrs="{'required': [('x_contract_type', '!=', 'empresa')], 'invisible': [('x_contract_type', '=', 'empresa')]}"/>
					<field name="x_client_name" attrs="{'required': [('x_contract_type', '!=', 'empresa')], 'invisible': [('x_contract_type', '=', 'empresa')]}"/>

					<field name="x_aut_nif" attrs="{'required': [('x_contract_type', '=', 'empresa')], 'invisible': [('x_contract_type', '!=', 'empresa')]}"/>
					<field name="x_aut_name" attrs="{'required': [('x_contract_type', '=', 'empresa')], 'invisible': [('x_contract_type', '!=', 'empresa')]}"/>

					<field name="phone" string="TelÃ©fono de contacto"/>
					<field name="x_phone_2" />
					<field name="email_from" />
				</group>


				<group colspan="2">
					<field name="x_address_id" />
					<label for="street" string="Address"/>
                        <div class="o_address_format">
                            <field name="street" placeholder=" " class="o_address_street"/>
                            <field name="street2" placeholder=" " class="o_address_street"/>
                            <field name="city" placeholder=" " class="o_address_city"/>
                            <field name="state_id" class="o_address_state" placeholder=" " options="{'no_open': True}"/>
                            <field name="zip" placeholder=" " class="o_address_zip"/>
                        </div>
				</group>


				<group colspan="2">
					<field name="x_bank_account" />
				</group>


				<group colspan="2">
					<field name="x_internet_speed" />
				</group>


				<group>
					<field name="x_one_pro" widget="one2many_checkboxes"/>
				</group>


				<group colspan="2">
					<field name="x_tv" widget="one2many_checkboxes"/>
				</group>


				<group colspan="2">
					<field name="x_promo" />
					<field name="x_promo_price" />
				</group>


				<group colspan="2">
					<field name="x_is_new" />

					<field name="x_port_number" attrs="{'invisible': [('x_is_new', '!=', 'portabilidad')], 'required': [('x_is_new', '=', 'portabilidad')]}"/>
					<field name="x_port_operator" attrs="{'invisible': [('x_is_new', '!=', 'portabilidad')], 'required': [('x_is_new', '=', 'portabilidad')]}"/>
					<field name="x_port_new" attrs="{'invisible': [('x_is_new', '!=', 'portabilidad')]}"/>
					<field name="x_port_nif" attrs="{'invisible': [('x_port_new', '!=', True)], 'required': [('x_port_new', '=', True)]}"/>
					<field name="x_port_name" attrs="{'invisible': [('x_port_new', '!=', True)], 'required': [('x_port_new', '=', True)]}"/>
				</group>


				<group colspan="2">
					<field name="x_dni_back" />
				</group>


				<group colspan="2">
					<field name="x_lines_phone">
						<tree editable="top">
							<field name="x_status" readonly="1"/>
							<field name="x_name" />
							<field name="x_rate" />
							<field name="x_terminal" />
							<field name="x_is_prepaid" />
							<field name="x_icc" attrs="{'invisible': [('x_is_prepaid', '!=', True)], 'required': [('x_is_prepaid', '=', True)]}"/>
							<field name="x_different_partner" />
							<field name="x_titular" attrs="{'invisible': [('x_different_partner', '!=', True)], 'required': [('x_different_partner', '=', True)]}"/>
							<field name="x_nif" attrs="{'invisible': [('x_different_partner', '!=', True)], 'required': [('x_different_partner', '=', True)]}"/>
							<field name="x_aspod" />
						</tree>
					</field>
				</group>


			</xpath>

		</field>
	</record>



